@Mbot.on_message(filters.private & filters.command("help")) 
async def mc_help(client, message):
    await message.reply_photo(
        photo=random.choice(PICS),
        caption=caption1.format(message.from_user.first_name), 
        reply_markup=ReplyKeyboardMarkup(
            [[
                ".ğŸµ Music ğŸµ"
            ],[
                ".YouTube ğŸ”´", ".Spotify ğŸŸ¢", ".Deezer ğŸŸ£"
            ],[
                ".Saavn ğŸŸ¡", ".SoundCloud ğŸŸ ", ".MixCloud ğŸ”µ"
            ],[
                ".Facebook DlğŸŒ€", ".Instagram DlğŸ‘¾"
            ],[
                ".More â™" 
            ],[
                ".â—€ï¸", "âŒ CLOSE âŒ", ".ğŸ "
            ]], 
            resize_keyboard=True
        ) 
    ) 
    await asyncio.sleep(3600)
    await a.delete()
    await message.delete()

