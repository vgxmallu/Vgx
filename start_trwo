@Mbot.on_message(filters.private & filters.regex("More ♏") | filters.private & filters.regex("⬅️⬅️"))
async def mc_more(client, message):
    b = await message.reply_photo(
        photo=random.choice(PICS),
        caption=caption2.format(message.from_user.first_name),
        reply_markup=ReplyKeyboardMarkup(
            [[
                ".Wallpapers 🌇"
            ],[
                ".⟨⬅️", "❌ CLOSE ❌", ".🏠"
            ]], 
            resize_keyboard=True
        ) 
    ) 
    await asyncio.sleep(900)
    await b.delete()
    await message.delete()

@Mbot.on_message(filters.private & filters.regex("🏠") | filters.private & filters.regex("◀️"))
async def mc_home(client, message):
    c = await message.reply_photo(
        photo=random.choice(PICS),
        caption=caption3.format(message.from_user.mention),
        reply_markup=ReplyKeyboardMarkup(
            [[
                ".Group 💌", ".Log Channel☁️"
            ],[
                ".Help ♑"
            ],[
                "❌ CLOSE ❌"
            ]],
            resize_keyboard=True
        ) 
    ) 
    await message.reply_text(ms_stt)
    await asyncio.sleep(3600)
    await c.delete()
    await message.delete()
  
