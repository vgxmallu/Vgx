@Mbot.on_message(filters.group & filters.command("webgame", CMD) | filters.group & filters.command("wallpapers", CMD) | filters.group & filters.command("start") | filters.group & filters.command("game") | filters.group & filters.command("start"))
async def walls(client, message):
    await message.reply_text("Heya :), PM me if you want to use this command!")

@Mbot.on_message(filters.private & filters.regex("ğŸ”½") | filters.private & filters.regex("Categories") | filters.private & filters.regex("Page 2ï¸âƒ£") | filters.private & filters.regex("Page 1ï¸âƒ£") | filters.private & filters.regex("â–â–â–â–â–â–â–â–â–â–")) 
async def delete(client, message):
    await message.delete()
    
@Mbot.on_message(filters.private & filters.command("wallpapers", CMD) & pyro_cooldown.wait(10)) 
async def wallpaper(client, message):
    m1 = await message.reply_photo(
        photo="https://telegra.ph/file/3068c6123cca8734b4911.jpg",
        caption=cap_wall.format(message.from_user.first_name), 
        reply_markup=ReplyKeyboardMarkup(
            [[
               ".Page 1ï¸âƒ£", "âŒ CLOSE âŒ", ".â¡ï¸"
            ],[
                ".ğŸŒ‡ Wallpapers ğŸŒ‡"
            ],[
                ".ğŸ”½", ".Categories", ".ğŸ”½"
            ],[
                ".Anime ğŸ§š", ".Animals ğŸ¦", ".Logos â™‘"
            ],[
                ".Car&Bike ğŸï¸", ".Drownings ğŸ‘", ".Funny ğŸ˜„"
            ],[
                ".Entertainment ğŸ§‘â€ğŸ¤", ".Game ğŸ®", ".Love â¤ï¸"
            ],[
                ".Music ğŸµ", ".Nature ğŸƒ", ".Sayings ğŸ“"   
            ]], 
            resize_keyboard=True
        ) 
    )
    w1 = await message.reply_text(wall_tottal)
    await client.send_message(LOG_CHANNEL, MW.format(message.from_user.mention, message.from_user.username, message.from_user.dc_id, message.from_user.id))
    await message.delete()
    await asyncio.sleep(1200)
    await m1.delete()
    await w1.delete()
    
